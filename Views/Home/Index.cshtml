@model Tecnostore.com.ViewModel.ViewIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <partial name="_AdminMessage" />
    <div class="carousel max">
        <div class="item max">
                <div class="text-area">
                    <h1>Envío gratis en compras mayores a <span class="primary"> $999</span></h1>
                    <p>Promoción para nuevos usuarios o cupones validos hasta agotar existencias.</p>
                </div>
                <div class="area-button">
                    <a href="" class="btn btn-primary">Comprar ahora</a>
                </div>
            </div>
        <div class="items max">
            <div class="item max">
                <div class="text-area">
                    <h4>Home Office</h4>
                    <p>Todo lo que necesitas para trabajar en casa.</p>
                </div>
                <div class="area-button">
                    <a href="" class="btn btn-attention">Ir a comprar</a>
                </div>
            </div>
            <div class="item max">
                <div class="text-area">
                    <h4>Encuentra las mejores GPU. <span class="success">NVIDIA GeForce</span></h4>
                    <p>Explora todos los productos de Nvidia en TecnoStore.</p>
                </div>
                <div class="area-button">
                    <a asp-action="Login" class="btn btn-success">Comprar ahora</a>
                </div>
            </div>
        </div>
    </div>
    <div class="categories max">
        <h2>Comprar por categoría</h2>
        @if(Model.Categorias.Count() > 0){
            <div class="categories-area">
                @foreach(var item in Model.Categorias){
                    <a asp-action="ViewCategoria" asp-controller="Home" asp-route-id="@item.Id">
                        <div class="categorie">
                            <div class="image-categorie">
                                <img src="@Url.Content($"~/img/categorias/{item.Imagen}")" alt="Imagen de categoría">
                            </div>
                            <div class="text-categorie">
                                <p class="text-center">@item.Nombre</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        }else{
            <div class="categories-area">
                <div class="categorie">
                    <div class="image-categorie">
                        <img src="" alt="Imagen de categoría">
                    </div>
                    <div class="text-categorie">
                        <p></p>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="categories max">
        <h2>Encuentra las mejores marcas</h2>
